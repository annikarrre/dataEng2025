# .env.example

# Project / Airflow settings
COMPOSE_PROJECT_NAME=data_warehouse
AIRFLOW_UID=50000

# --- Airflow metadata database ---
AIRFLOW_DB_USER=airflow
AIRFLOW_DB_PASSWORD=changeme
AIRFLOW_DB_NAME=airflow

# --- Pipeline PostgreSQL database ---
PIPELINE_DB_USER=user
PIPELINE_DB_PASSWORD=changeme
PIPELINE_DB_NAME=db

# --- pgAdmin UI ---
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=changeme

# --- Airflow Admin credentials ---
AIRFLOW_ADMIN_USER=airflow
AIRFLOW_ADMIN_PASSWORD=changeme
AIRFLOW_ADMIN_EMAIL=admin@example.com

# --- Connection strings for Airflow ---
# These point Airflow to the other databases. Adjust hostnames if not using Docker Compose.
AIRFLOW_CONN_PIPELINE_DB=postgresql+psycopg2://${PIPELINE_DB_USER}:${PIPELINE_DB_PASSWORD}@db:5432/${PIPELINE_DB_NAME}
AIRFLOW_CONN_CLICKHOUSE_HTTP=clickhouse+http://default:mysecret@clickhouse:8123/default
